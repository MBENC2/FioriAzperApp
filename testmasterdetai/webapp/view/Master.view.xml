<mvc:View
    controllerName="testmasterdetai.controller.Master"
   xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
   xmlns:html="http://www.w3.org/1999/xhtml"
>
<App>
		<pages>
			<Page title="Orders List">
				<List id="orders" items="{mprod>/drinks}" mode="SingleSelectMaster" selectionChange="onSelectionChange">
					<items>
						<StandardListItem title="{mprod>drinkName}" type="Active" press="onSelectionChange"/>
					</items>
				</List>
			</Page>
		</pages>
	</App>
</mvc:View>
