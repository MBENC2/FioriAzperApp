<mvc:View
    controllerName="testmasterdetai.controller.drinkDetails"
   xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
   xmlns:html="http://www.w3.org/1999/xhtml"
>

    	<App>
		<pages>
			<Page title="{drinkName}" navButtonPress="onNavBack" showNavButton="{device>/system/phone}">
				<content>
					<List id="products" items="{mprod>/drinks}" headerText="Products">
						<items>
							<StandardListItem title="{mprod>productName}" type="Active" press="onSelectionChange"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
