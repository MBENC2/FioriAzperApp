<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="project1.controller.View1" displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">

		<columns>
			<Column
				width="12em">
				<Text text="Product" />
			</Column>
		
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text text="{BussinessPartnerName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>